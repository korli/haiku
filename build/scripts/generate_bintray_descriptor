#!/bin/sh -vx

targetArch=x86_64

if [ -n "${BINTRAY-API-KEY}" ]; then

PCK_NAME="Haiku Images"
DESCRIPTION="Images built by Travis CI"
BINTRAY_USER="korli"
BINTRAY_API_KEY="$BINTRAY_API_KEY" # env
BINTRAY_REPO="haiku_images"
WEBSITE_URL="https://github.com/korli/haiku"
ISSUE_TRACKER_URL="https://github.com/korli/haiku/issues"
VCS_URL="https://github.com/korli/haiku.git"

echo "{
    \"package\": { 
        \"name\": \"${PCK_NAME}\",
    	\"repo\": \"${BINTRAY_REPO}\",
        \"desc\": \"${DESCRIPTION}\",
        \"desc_url\": \"auto\",
        \"website_url\": [\"${WEBSITE_URL}\"],
        \"vcs_url\": [\"${VCS_URL}\"],
        \"issue_tracker_url\": [\"${ISSUE_TRACKER_URL}\"],
        \"licenses\": [\"MIT\"],
        \"labels\": [\"Haiku\"],
        \"public_download_numbers\": false,
        \"public_stats\": false,
    }
    \"version\": {
        \"name\": \"hrev99999\",
        \"desc\": \"Fake version description\"
    },

    \"files\":
        [
        {\"includePattern\": \"generated/(haiku.*)\", \"uploadPattern\": \"$TRAVIS_COMMIT/$1\"}
        ],
    \"publish\": true
}" > generated/bintray.json

fi
